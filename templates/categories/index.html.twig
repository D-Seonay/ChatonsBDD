{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des cat√©gories</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titre</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for categorie in categories %}
                <tr>
                    <th scope="row">{{ categorie.id }}</th>
                    <td>{{ categorie.titre}}</td>
                    <td>{{ categorie.description }}</td>
                    <td>
                        <a href="{{ path('app_categories_modifier', {'id': categorie.id}) }}" class="btn btn-secondary">Modifier</a>
                        <a href="{{ path('app_categories_supprimer', {'id': categorie.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            <a href="{{ path('app_categories_ajouter') }}" class="btn btn-primary">Ajouter</a>
        </table>

{% endblock %}
